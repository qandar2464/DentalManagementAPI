@model DentalManagementAPI.Models.Treatment

<h2>Delete Treatment</h2>

<h3>Are you sure you want to delete this treatment?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Treatment Name
        </dt>
        <dd class="col-sm-10">
            @Model.TreatmentName
        </dd>
        <dt class="col-sm-2">
            Specialist
        </dt>
        <dd class="col-sm-10">
            @Model.TreatmentSpecialist
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TreatmentID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
